<h1>Cats!</h1>

<h2>Burgers I didn't eat!</h2>

<ul>
  {{#each hamburgers}}
    {{#unless this.devourIt}}
      <li>
        {{this.name}}

        <form action="hamburgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour it" value="true">
          <button type="submit">Devour It!</button>
        </form>

        {{> hamburgers/delete-hamburger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers I Ate!</h2>

<ul>
  {{#each hamburgers}}
    {{#if this.devourIt}}
      <li>
        {{this.name}}

        <form action="hamburgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devourIt" value="false">
          <button type="submit">Devour It!</button>
        </form>

        {{> hamburgers/delete-hamburger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Hamburger</h2>
<form class="create-update-form" action="hamburgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Hamburger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devour It?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Hamburger</button>
</form>
